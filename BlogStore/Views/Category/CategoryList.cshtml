@model List<BlogStore.EntityLayer.Entities.Category>
@{
    ViewData["Title"] = "Kategori Listesi";
}

<link href="@(Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css"))" rel="stylesheet" />

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Kategori Listesi</h2>
        <a href="/Category/CreateCategory/" class="btn btn-primary">+ Yeni Kategori Ekle</a>
    </div>
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
        <tr>
            <th style="width:5%;">#</th>
            <th>Kategori Adı</th>
            <th style="width:10%;">Sil</th>
            <th style="width:12%;">Güncelle</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td>
                        <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger btn-sm" title="Sil">
                            <i class="bi bi-trash"></i> Sil
                        </a>
                    </td>
                    <td>
                        <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-warning btn-sm" title="Güncelle">
                            <i class="bi bi-pencil"></i> Güncelle
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Kayıtlı kategori bulunamadı.</td>
            </tr>
        }
        </tbody>
    </table>
</div>