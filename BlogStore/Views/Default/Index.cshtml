<script>
    document.addEventListener("DOMContentLoaded", function() {
        const logo = document.getElementById("animated-blogstore");
        if (!logo) return;
        const spans = logo.querySelectorAll("span");
        function animateLoop(i = 0) {
            spans.forEach((span, idx) => {
                span.style.transform = "";
            });
            setTimeout(() => {
                spans[i].style.transform = "translateY(-14px) scale(1.18) rotate(-8deg)";
                setTimeout(() => {
                    spans[i].style.transform = "";
                    animateLoop((i + 1) % spans.length);
                }, 350);
            }, 100);
        }
        animateLoop();
    });
</script>