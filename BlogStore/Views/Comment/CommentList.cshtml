@model List<BlogStore.EntityLayer.Entities.Comment>
@{
    ViewData["Title"] = "Kategori Listesi";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Yorum Listesi</h2>
        <a href="/Comment/CreateComment/" class="btn btn-primary">+ Yeni Yorum Ekle</a>
    </div>
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th style="width:5%;">#</th>
                <th>Yorum Adı</th>
                <th>Yorum Detayı</th>
                <th style="width:10%;">Sil</th>
                <th style="width:12%;">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.UserNameSurname</td>
                        <td>@item.CommentDetail</td>
                        <td>
                            <a href="/Comment/DeleteComment/@item.Id" class="btn btn-danger btn-sm" title="Sil">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </td>
                        <td>
                            <a href="/Comment/UpdateComment/@item.Id" class="btn btn-warning btn-sm" title="Güncelle">
                                <i class="bi bi-pencil"></i> Güncelle
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">Kayıtlı yorum bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
